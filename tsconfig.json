{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routers/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@mocks/*": ["src/mocks/*"]
    }
  },
  "exclude": ["node_modules"]
}
